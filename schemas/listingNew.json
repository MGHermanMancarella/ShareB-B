{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/jobNew.schema.json",
  "type": "object",
  "properties": {
    "price": {
      "type": "integer",
      "pattern": "([0-9])"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 60
    },
    "host_user": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "city": {
      "type": "string",
      "maxLength": 30
    },
    "state": {
      "type": "string",
      "maxLength": 30
    },
    "zipcode": {
      "type": "string",

      "maxLength": 5
    },
    "address": {
      "type": "string",
      "maxLength": 25
    },
    "description": {
      "type": "string",
      "minLength": 10
    }
  },
  "additionalProperties": true,
  "required": [
    "price",
    "host_user",
    "city",
    "zipcode",
    "address",
    "description",
    "state"
  ]
}
